<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/nliveo_blue_colorAccent"/>
            <corners
                android:radius="5dp"/>
            <stroke
                android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/nliveo_gray"/>
            <corners
                android:radius="5dp"/>
            <stroke
                android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>