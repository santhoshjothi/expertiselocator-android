<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Container Green Rectangle -->

    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="8dp"/>
            <size
                android:width="80dp"
                android:height="80dp"/>
            <solid
                android:color="@android:color/holo_green_dark" />
        </shape>
    </item>

    <!-- Top Blue oval shape -->

    <item
        android:top="60dp"
        android:right="-20dp"
        android:left="-20dp"
        android:bottom="-15dp">
        <shape android:shape="oval">
            <corners
                android:radius="8dp"/>
            <solid
                android:color="@color/nliveo_blue_colorAccent" />
            <stroke
                android:color="@android:color/transparent"
                android:width="2dp"/>
        </shape>
    </item>

    <!-- Front White Border -->

    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="120dp"
                android:height="120dp"/>
            <corners
                android:radius="6dp"/>
            <stroke
                android:color="@color/white"
                android:width="1dp"/>
            <solid
                android:color="@color/nliveo_grey"/>
        </shape>
    </item>

</layer-list>