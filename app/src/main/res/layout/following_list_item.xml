<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/img_profile_followinglist"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/marginFive"
                android:scaleType="fitXY"
                android:src="@drawable/solutions" />

            <ImageView
                android:id="@+id/follwinglist_profile_menu"
                android:layout_width="@dimen/widthHeightThirty"
                android:layout_height="@dimen/widthHeightThirty"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_displayname_followinglist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="User Name"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_designation_followinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:textAlignment="center"
                android:textSize="18sp"
                android:lines="3"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_oval"
            android:padding="2dp"
            android:text="UNFOLLOW"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/btn_unfollow_following"/>

    </LinearLayout>
</android.support.v7.widget.CardView>