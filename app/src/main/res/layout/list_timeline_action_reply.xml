<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/marginThree">

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/imgTimelineReplyProfilePicture"
            android:layout_width="@dimen/widthHeightThirty"
            android:layout_height="@dimen/widthHeightThirty"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/marginThree"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvTimelineReplyProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textStyle="bold"
                android:layout_margin="@dimen/marginThree"
                android:textSize="@dimen/textSizeMedium"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTimelineReplyPostedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:layout_margin="@dimen/marginThree"
                android:textSize="@dimen/textSizeSmall"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgTimelineReplyProfileMenu"
            android:layout_width="@dimen/widthHeightThirty"
            android:layout_height="@dimen/widthHeightThirty"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/marginThree" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTimelineReplyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="@dimen/textSizeMedium"/>

</LinearLayout>