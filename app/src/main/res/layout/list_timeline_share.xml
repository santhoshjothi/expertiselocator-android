<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/marginThree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/marginThree">

        <ImageView
            android:id="@+id/imgShareProfilePicture"
            android:layout_width="@dimen/widthHeightSixty"
            android:layout_height="@dimen/widthHeightSixty"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/marginThree"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvShareProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textStyle="bold"
                android:layout_margin="@dimen/marginThree"
                android:textSize="@dimen/textSizeLarge"/>

            <TextView
                android:id="@+id/tvSharePostedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:layout_margin="@dimen/marginThree"
                android:textSize="@dimen/textSizeMedium"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvShareMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="@dimen/textSizeMedium"
        android:layout_margin="@dimen/marginThree"
        android:maxLines="3"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/viewShareImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widthHeightLarge"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/image_content_description"/>

    <VideoView
        android:id="@+id/viewShareVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widthHeightLarge" />

</LinearLayout>