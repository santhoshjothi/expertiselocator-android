<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_txt_heading"
        android:background="@color/colorPrimaryDark" android:paddingTop="4dp"
        >
        <TextView
            android:id="@+id/txt_tittle_headding"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/video_link_title"
            android:textSize="20sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_txt_box"
        android:paddingTop="4dp"
        android:layout_below="@+id/lin_txt_heading"
        >
        <TextView
            android:id="@+id/txt_tittle_box"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/video_link"
            android:textSize="16sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="2dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/marginFive"
        android:background="@drawable/edit_text_oval_shape"
        android:layout_below="@+id/lin_txt_box"
        android:id="@+id/lin_msg"
        >
        <EditText
            android:id="@+id/edt_box"
            android:layout_height="28dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="@string/here"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:textSize="16sp"
            android:typeface="sans"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutBtns"
        android:layout_below="@+id/lin_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_submit_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:typeface="sans"
                android:background="@drawable/button_oval"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/submit"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_cancel_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/cancel"
                android:typeface="sans"
                android:background="@drawable/ovel_border"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
